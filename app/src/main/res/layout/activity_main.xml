<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.apple.sharedpreference.MainActivity"
    android:background="@android:color/holo_orange_light">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/textView"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="It's free and takes less than 30 seconds."
        android:id="@+id/textView2"
        android:textSize="15dp"
        android:textColor="#ff16ff01"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/edcompass"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/edpass"
        android:layout_alignParentStart="true"
        android:hint="Confirm Password"
        android:background="@android:color/background_light"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/edpass"
        android:hint="Password"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/edmail"
        android:layout_alignParentStart="true"
        android:background="@android:color/background_light"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edlname"
        android:hint="LastName"
        android:background="@android:color/background_light"
        android:layout_below="@+id/edname"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:layout_alignParentEnd="true" />

    <EditText
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:inputType="textPersonName"
       android:ems="10"
       android:layout_marginTop="15dp"
       android:id="@+id/edname"
        android:hint="UserName"
        android:background="@android:color/background_light"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/edmail"
        android:hint="Email"
        android:layout_marginTop="19dp"
        android:background="@android:color/background_light"
        android:layout_below="@+id/edlname"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="I agree to the Terms of Use."
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/checkBox"
        android:layout_marginTop="22dp"
        android:background="@android:color/background_light"
        android:layout_below="@+id/edcompass"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn1"
        android:layout_marginTop="13dp"
        android:background="@android:drawable/editbox_background"
        android:layout_below="@+id/checkBox"
        android:layout_alignParentStart="true" />
</RelativeLayout>
